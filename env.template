# =============================================================================
# TradOps - Configuration Template
# =============================================================================
# Copiez ce fichier vers .env et remplissez vos valeurs

# =============================================================================
# MODE DE TRADING
# =============================================================================
# Options: public | testnet | live
# - public: Données gratuites + paper trading (pas d'API keys requis)
# - testnet: Trading simulé sur testnet exchange (API keys testnet requis)
# - live: Trading réel avec argent réel (⚠️ ATTENTION ⚠️)
TRADING_MODE=public

# =============================================================================
# EXCHANGE CONFIGURATION
# =============================================================================
# Choisissez votre exchange principal
# Options: bybit | okx | kucoin | kraken | binance | coinbase
DEFAULT_EXCHANGE=bybit

# -----------------------------------------------------------------------------
# Bybit (RECOMMANDÉ)
# -----------------------------------------------------------------------------
# API Keys: https://www.bybit.com/app/user/api-management
# Testnet: https://testnet.bybit.com/
BYBIT_API_KEY=
BYBIT_API_SECRET=
BYBIT_TESTNET=true

# -----------------------------------------------------------------------------
# OKX
# -----------------------------------------------------------------------------
# API Keys: https://www.okx.com/account/my-api
# Testnet: https://www.okx.com/demo-trading
OKX_API_KEY=
OKX_API_SECRET=
OKX_PASSPHRASE=
OKX_TESTNET=true

# -----------------------------------------------------------------------------
# KuCoin
# -----------------------------------------------------------------------------
# API Keys: https://www.kucoin.com/account/api
KUCOIN_API_KEY=
KUCOIN_API_SECRET=
KUCOIN_PASSPHRASE=

# -----------------------------------------------------------------------------
# Kraken
# -----------------------------------------------------------------------------
# API Keys: https://www.kraken.com/u/security/api
KRAKEN_API_KEY=
KRAKEN_API_SECRET=

# -----------------------------------------------------------------------------
# Binance (optionnel)
# -----------------------------------------------------------------------------
BINANCE_API_KEY=
BINANCE_API_SECRET=
BINANCE_TESTNET=true

# -----------------------------------------------------------------------------
# Coinbase (optionnel)
# -----------------------------------------------------------------------------
COINBASE_API_KEY=
COINBASE_API_SECRET=

# =============================================================================
# DATA SOURCES (pour mode public)
# =============================================================================
# CoinGecko (gratuit, pas de clé requise pour utilisation basique)
COINGECKO_API_KEY=

# CryptoCompare (optionnel, version gratuite disponible)
CRYPTOCOMPARE_API_KEY=

# =============================================================================
# NEWS & SOCIAL DATA SOURCES
# =============================================================================
# CryptoPanic API
CRYPTOPANIC_API_KEY=

# LunarCrush API
LUNARCRUSH_API_KEY=

# NewsAPI
NEWSAPI_KEY=

# Twitter/X API (optionnel)
TWITTER_API_KEY=
TWITTER_API_SECRET=
TWITTER_BEARER_TOKEN=

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
TIMESCALEDB_HOST=localhost
TIMESCALEDB_PORT=5432
TIMESCALEDB_DB=trading_db
TIMESCALEDB_USER=postgres
TIMESCALEDB_PASSWORD=postgres

REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# =============================================================================
# STREAMING (Kafka/Redpanda)
# =============================================================================
KAFKA_BOOTSTRAP_SERVERS=localhost:9092

# =============================================================================
# ML & MLOPS
# =============================================================================
MLFLOW_TRACKING_URI=http://localhost:5000

# =============================================================================
# MONITORING & ALERTING
# =============================================================================
PROMETHEUS_PORT=8000
GRAFANA_URL=http://localhost:3000

# Slack Webhook (optionnel)
SLACK_WEBHOOK_URL=

# Telegram Bot (optionnel)
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# =============================================================================
# RISK MANAGEMENT
# =============================================================================
# Taille maximale d'une position (% du capital)
MAX_POSITION_SIZE=0.10

# Perte maximale quotidienne (% du capital)
MAX_DAILY_LOSS=0.05

# Drawdown maximum accepté (% du capital)
MAX_DRAWDOWN=0.15

# Multiplicateur ATR pour stop loss
STOP_LOSS_ATR_MULTIPLIER=2.0

# =============================================================================
# TRADING PARAMETERS
# =============================================================================
# Actifs à trader (séparés par virgules)
WHITELISTED_ASSETS=BTC/USDT,ETH/USDT,SOL/USDT

# Capital initial pour paper trading
INITIAL_CAPITAL=10000

# =============================================================================
# PAPER TRADING SIMULATION
# =============================================================================
# Slippage simulé (en %)
SIMULATED_SLIPPAGE=0.001

# Frais de transaction simulés (en %)
SIMULATED_FEES=0.001

